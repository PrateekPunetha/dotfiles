# launch terminal
super + Return
   kitty

# program launcher
alt + F1
    rofi_run -r

# launch programs
super + {w,f,s,t,e}
    {chromium,nemo,spotify,telegram-desktop,ferdi}

# launch TUI programs
super + {m,n,r,y}
    {kitty --class="neomutt" neomutt,kitty --class="newsboat" newsboat,kitty --class="ranger" ranger, kitty --class="ytfzf" ytfzf}

# auto change wallpaper
super + {a}
    {unsplash}

# keybindings, clipboard, logout, calculator
super + {F1,v,x,c}
   rofi_run {-s,-c,-l,-q}

# quit the window
super + {q}
    {bspc node -c}

# set the window state
super + {F9,F10,F11}
    bspc node --state {tiled,floating,fullscreen}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
ctrl + alt + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# full screenshot, selection area, full in 5 seconds
Print + {_,shift,alt}
    flameshot {full,gui,full -d 5000}

# increase/decrease volume by 5%
XF86Audio{Raise,Lower}Volume
    change-volume {up,down}

# toggle volume mute
XF86AudioMute
   change-volume mute

# toggle mic mute
XF86AudioMicMute
    mictoggle

# increase/decrease brightness by 10
XF86MonBrightness{Up,Down}
    change-brightness {up,down}

# next, previous, play, pause toggle
ctrl + {Right,Left,Up,Down}
    playerctl {next,previous,play,pause}

# Show dunctl history
ctrl + grave
    dunstctl history-pop

# Close last notification
control + space
    dunstctl close

# Close all notifications
control + shift + space
    dunstctl close-all

# restart polybar
super + shift + p
    fixpoly; notify-send 'polybar' 'Restarted'

# reload configurations
super + shift + r
    pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'
